
<p id="eventInfo" class="{{_id}}" eventid="{{_id}}" organizer="{{organizerID}}" eventname="{{name}}" currentuser = "{{currentuser}}">Event Name: {{name}}<br>
Event Description: {{description}}<br>
Start Date: {{startDate}}<br>
End Date: {{endDate}}<br>
<img class="eventImage"
                          alt="{{name}} Image"
                          src="{{picture}}"
                          ></p><br>
Status: {{status}}</p>
{{#if canRSVP}}
{{#if hasRSVPed}}
<p>You've RSVPed for this event!</p>
<form action="/events/event/{{_id}}" method="GET" id="unrsvp_form">
    <button type="submit" name="rsvp_button" id="unrsvp_button">UnRSVP for this event</button>
</form>
{{else}}
<form action="/events/event/{{_id}}" method="GET" id="rsvp_form">
    <button type="submit" name="rsvp_button" id="rsvp_button">RSVP for this event</button>
</form>
{{/if}}
{{/if}}
{{#if canApprove}}
<form action="/events/{{_id}}" method="PATCH" id="approve_form">
    <label for = "name">
        Approval:
        <input type="checkbox" id="approval-checkbox" name="approval">
    </label>
    <button type="submit" name="approve_form" id="approve_form">Submit approval</button>
</form>
{{/if}}

{{#if canEdit}}
<form action="/events/{{_id}}" method="PATCH" id="patch-event-form">
    <label for = "name">
        Event Name:
        <input type="text" id="name" name = "name">
    </label>
    <label for = "description">
        Description:
        <input type="text" id="description" name = "description" >
    </label>
    <label>
      Start Date:
      <input type="datetime-local" name="startDate">
    </label>
    <label>
      End Date:
      <input type="datetime-local" name="endDate">
    </label>
    <label>
        <button type="submit" name="edit_button" id="edit_button">Submit Event Edit</button>
    </label>
</form>
{{/if}}

{{#if canEdit}}
<form action="/events/{{_id}}" method="DELETE" id="deleteEvent">
    <button type="submit" name="delete_button" id="delete_button">Delete Event</button>
</form>
{{/if}}

{{#if hasStarted}}
    <p>Attendees: </p>
    {{#each attendeesList}}
    {{/each}}
    {{#each rsvpList}}

    {{/each}}
{{/if}}

