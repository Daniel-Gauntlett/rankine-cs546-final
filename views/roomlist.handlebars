<form action="/events/" method="POST" class="bookRoom">
		<button type="submit" name="booking_button" class="booking_button">Book This Room!</button>
</form>
{{#each rooms}}
    <p class = "room">Building: {{building}}
    <br>
    Room #: {{roomNumber}}
    <br>
    Room Capacity: {{roomCapacity}}
    <br>
    Room Features: {{roomFeatures}}
    <br>
    Events: <ol>
      {{#each events}}
         <li>{{this}}</li>
      {{/each}}
    </ol>
    <br>
    Unavailable Times: <ul>
    {{#each unavailableTimes}}
        <li>{{this}}</li>
    {{/each}}
    </ul>
    <br>
    <img class="eventImage"
                          alt="{{building}} {{roomNumber}} Image"
                          src="{{roomPicture}}"
                          ></p>
    <form action="/events/" method="POST" class="bookRoom">
		<button type="submit" name="booking_button" class="booking_button">Book This Room!</button>
	  </form>
    <!--- Only show this if user is admin, maybe inject with Ajax? Should link to roommanage page for specific room ID-->
    {{#if isAdmin}}
       <div class="showEditButton">
      <form action="/rooms/{{_id}}" method="GET" class="editRoom">
      <button type="submit" name="editRoomButton" class="editRoomButton">Manage This Room</button>
      </form>
      </div>
    {{/if}}
{{/each}}